{
  "version": "0.80.90",
  "command": {
    "publish": {
      "message": "chore(release): publish %s [skip ci]",
      "allowBranch": ["master"]
    }
  },
  "changelog": {
    "repo": "meepshop/meep-lerna",
    "labels": {
      "PR: Breaking Change :boom:": ":boom: Breaking Change",
      "PR: New Feature :rocket:": ":rocket: New Feature",
      "PR: Bug Fix :bug:": ":bug: Bug Fix",
      "PR: Docs :memo:": ":memo: Documentation",
      "PR: Internal :house:": ":house: Internal"
    }
  },
  "lerna": "3.18.4",
  "npmClient": "yarn",
  "npmClientArgs": ["--no-lockfile"],
  "ignoreChanges": ["**/__tests__/**", "**/*.md"],
  "packages": [
    "packages/*",
    "meepshop/*",
    "meepshop/modules/*",
    "store/*",
    "store/pages/*",
    "admin/*",
    "admin/pages/*",
    "admin/refactor/*"
  ],
  "useWorkspaces": true
}
