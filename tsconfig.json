{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "noEmit": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@admin/utils/lib/*": ["admin/utils/src/*"],
      "@admin/apollo/lib/*": ["admin/apollo/src/*"],
      "@store/utils/lib/*": ["store/utils/src/*"],
      "@store/apollo/lib/*": ["store/apollo/src/*"],
      "@store/ad-track/lib/*": ["store/ad-track/src/*"],
      "@meepshop/context/lib/*": ["meepshop/context/src/*"],
      "@meepshop/utils/lib/*": ["meepshop/utils/src/*"],
      "@meepshop/divider/lib/*": ["meepshop/divider/src/*"],
      "@meepshop/draft-text/lib/*": ["meepshop/draft-text/src/*"],
      "@meepshop/facebook-wall/lib/*": ["meepshop/facebook-wall/src/*"],
      "@meepshop/google-map/lib/*": ["meepshop/google-map/src/*"],
      "@meepshop/iframe/lib/*": ["meepshop/iframe/src/*"],
      "@meepshop/product-draft-text/lib/*": ["meepshop/product-draft-text/src/*"],
      "@meepshop/product-video/lib/*": ["meepshop/product-video/src/*"],
      "@meepshop/social-thumbs/lib/*": ["meepshop/social-thumbs/src/*"],
      "@meepshop/unavailable/lib/*": ["meepshop/unavailable/src/*"],
      "@meepshop/video/lib/*": ["meepshop/video/src/*"]
    }
  },
  "include": [
    "types/*",
    "packages/**/src/**/*",
    "meepshop/**/src/**/*",
    "store/**/src/**/*",
    "admin/**/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
