{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "noEmit": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@admin/utils/lib/*": ["admin/utils/src/*"],
      "@admin/apollo-client-resolvers/lib/*": ["admin/apollo-client-resolvers/src/*"],
      "@store/utils/lib/*": ["store/utils/src/*"],
      "@store/apollo-client-resolvers/lib/*": ["store/apollo-client-resolvers/src/*"],
      "@store/ad-track/lib/*": ["store/ad-track/src/*"],
      "@meepshop/utils/lib/*": ["meepshop/utils/src/*"],
      "@meepshop/google-map/lib/*": ["meepshop/google-map/src/*"],
      "@meepshop/divider/lib/*": ["meepshop/divider/src/*"]
    }
  },
  "include": [
    "types/*",
    "packages/**/src/**/*",
    "meepshop/**/src/**/*",
    "store/**/src/**/*",
    "admin/**/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
