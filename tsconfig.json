{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "noEmit": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@admin/utils/lib/*": ["admin/utils/src/*"],
      "@admin/apollo/lib/*": ["admin/apollo/src/*"],
      "@store/utils/lib/*": ["store/utils/src/*"],
      "@store/apollo/lib/*": ["store/apollo/src/*"],
      "@meepshop/utils/lib/*": ["meepshop/utils/src/*"],
      "@meepshop/apollo/lib/*": ["meepshop/apollo/src/*"],
      "@meepshop/hooks/lib/*": ["meepshop/hooks/src/*"],
      "@meepshop/context/lib/*": ["meepshop/context/src/*"],
      "@meepshop/form-data/lib/*": ["meepshop/form-data/src/*"]
    }
  },
  "include": [
    "types/**/*.ts",
    "packages/**/mock.ts",
    "packages/**/mock.tsx",
    "packages/**/mock/**/*",
    "packages/**/src/**/*",
    "meepshop/**/mock.ts",
    "meepshop/**/mock.tsx",
    "meepshop/**/mock/**/*",
    "meepshop/**/src/**/*",
    "store/**/mock.ts",
    "store/**/mock.tsx",
    "store/**/mock/**/*",
    "store/**/src/**/*",
    "admin/**/mock.ts",
    "admin/**/mock.tsx",
    "admin/**/mock/**/*",
    "admin/**/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
