{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "noEmit": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@admin/apollo/lib/*": ["admin/apollo/src/*"],
      "@admin/orders/lib/*": ["admin/orders/src/*"],
      "@store/utils/lib/*": ["store/utils/src/*"],
      "@store/apollo/lib/*": ["store/apollo/src/*"],
      "@meepshop/utils/lib/*": ["meepshop/utils/src/*"],
      "@meepshop/apollo/lib/*": ["meepshop/apollo/src/*"],
      "@meepshop/hooks/lib/*": ["meepshop/hooks/src/*"],
      "@meepshop/context/lib/*": ["meepshop/context/src/*"]
    }
  },
  "include": [
    "packages/**/**/*",
    "meepshop/**/**/*",
    "store/**/**/*",
    "admin/**/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
