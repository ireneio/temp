{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "noEmit": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@store/utils/lib/*": ["store/utils/src/*"],
      "@admin/utils/lib/*": ["admin/utils/src/*"],
      "@store/apollo-client-resolvers/lib/constants": ["store/apollo-client-resolvers/src/constants"]
    }
  },
  "include": [
    "types/*",
    "packages/**/src/**/*",
    "store/**/src/**/*",
    "admin/**/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
