{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "noEmit": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@admin/utils/lib/*": ["admin/utils/src/*"],
      "@admin/apollo/lib/*": ["admin/apollo/src/*"],
      "@store/utils/lib/*": ["store/utils/src/*"],
      "@store/apollo/lib/*": ["store/apollo/src/*"],
      "@store/group/lib/*": ["store/group/src/*"],
      "@meepshop/form-data/lib/*": ["meepshop/form-data/src/*"],
      "@meepshop/context/lib/*": ["meepshop/context/src/*"],
      "@meepshop/hooks/lib/*": ["meepshop/hooks/src/*"],
      "@meepshop/utils/lib/*": ["meepshop/utils/src/*"],
      "@meepshop/apollo/lib/*": ["meepshop/apollo/src/*"],
      "@meepshop/page/lib/*": ["meepshop/page/src/*"],
      "@meepshop/modules/lib/*": ["meepshop/modules/src/*"],
      "@meepshop/carousel/lib/*": ["meepshop/carousel/src/*"],
      "@meepshop/divider/lib/*": ["meepshop/divider/src/*"],
      "@meepshop/draft-text/lib/*": ["meepshop/draft-text/src/*"],
      "@meepshop/facebook-wall/lib/*": ["meepshop/facebook-wall/src/*"],
      "@meepshop/google-map/lib/*": ["meepshop/google-map/src/*"],
      "@meepshop/iframe/lib/*": ["meepshop/iframe/src/*"],
      "@meepshop/image/lib/*": ["meepshop/image/src/*"],
      "@meepshop/image-text/lib/*": ["meepshop/image-text/src/*"],
      "@meepshop/menu/lib/*": ["meepshop/menu/src/*"],
      "@meepshop/product-carousel/lib/*": ["meepshop/product-carousel/src/*"],
      "@meepshop/product-collections/lib/*": ["meepshop/product-collections/src/*"],
      "@meepshop/product-draft-text/lib/*": ["meepshop/product-draft-text/src/*"],
      "@meepshop/product-iframe/lib/*": ["meepshop/product-iframe/src/*"],
      "@meepshop/product-qa/lib/*": ["meepshop/product-qa/src/*"],
      "@meepshop/product-video/lib/*": ["meepshop/product-video/src/*"],
      "@meepshop/smart-conversion/lib/*": ["meepshop/smart-conversion/src/*"],
      "@meepshop/social-media/lib/*": ["meepshop/social-media/src/*"],
      "@meepshop/social-thumbs/lib/*": ["meepshop/social-thumbs/src/*"],
      "@meepshop/unavailable/lib/*": ["meepshop/unavailable/src/*"],
      "@meepshop/video/lib/*": ["meepshop/video/src/*"],
      "@meepshop/view-tracking/lib/*": ["meepshop/view-tracking/src/*"]
    }
  },
  "include": [
    "types/**/*.ts",
    "packages/**/mock.ts",
    "packages/**/mock.tsx",
    "packages/**/mock/**/*",
    "packages/**/src/**/*",
    "meepshop/**/mock.ts",
    "meepshop/**/mock.tsx",
    "meepshop/**/mock/**/*",
    "meepshop/**/src/**/*",
    "store/**/mock.ts",
    "store/**/mock.tsx",
    "store/**/mock/**/*",
    "store/**/src/**/*",
    "admin/**/mock.ts",
    "admin/**/mock.tsx",
    "admin/**/mock/**/*",
    "admin/**/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
