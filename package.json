    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-watch": "^6.0.1",
    "find-pkg-dir": "^2.0.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-canvas-mock": "^2.2.0",
    "lerna": "^3.19.0",
    "less": "^3.10.3",
    "less-loader": "^4.1.0",
    "lint-staged": "^10.5.4",
    "lodash.kebabcase": "^4.1.1",
    "output-file-sync": "^2.0.1",
    "patch-package": "^6.2.0",
    "postcss-less": "^3.1.4",
    "postinstall-prepare": "^1.0.1",
    "prettier": "^1.19.1",
    "prettier-package-json": "^2.1.3",
    "react-helmet": "^6.0.0",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "yo": "^3.1.1"
  },
  "engines": {
    "node": ">=10.15.3",
    "npm": ">=5.3.0",
    "yarn": ">=1.13.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "types codegen all && tsc && lint-staged",
      "post-merge": "make babel-all",
      "post-checkout": "make babel-all OPTION=\"--exclude-dependents --since master\""
    }
  },
  "resolutions": {
    "@types/query-string": "6.2.0",
    "@types/node": "13.11.1",
    "@apollo/client": "3.5.5",
    "bizcharts": "4.0.17",
    "query-string": "5.1.1",
    "react-use": "15.3.4",
    "url-parse": "1.4.7",
    "draft-js": "0.11.7"
  }
}
