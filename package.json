{
  "private": true,
  "name": "@meepshop/front-end",
  "license": "ISC",
  "workspaces": ["packages/*", "meepshop/*", "store/*", "admin/*"],
  "scripts": {
    "apollo:watch": "make apollo-watch",
    "clean": "lerna run clean --stream && lerna clean && make clean",
    "dev": "make babel-changed WATCH=-w",
    "preinstall": "patch-package --reverse || echo \"no patch packages\"",	
    "postinstall": "patch-package",
    "install:all": "yarn install && lerna bootstrap",
    "lint": "NODE_ENV=test esw --cache --color --ext js,ts,tsx",
    "lint:watch": "yarn lint -w --rule \"prettier/prettier: off\" --quiet",
    "prod": "NODE_ENV=production make babel-all",
    "release": "make release",
    "storybook": "yarn storybook:basic && lerna exec ../../.storybook/index.js --stream --scope",
    "storybook:basic": "lerna run schema --stream --scope @meepshop/mock-types && locales generate -o ./.storybook/static/locales.json",
    "storybook:static": "yarn storybook:basic && ./.storybook/static.js && lessc ./.storybook/combined.less storybook/combined.css",
    "test": "lerna run schema --stream --scope @meepshop/mock-types && jest --silent --runInBand",
    "tsc": "make tsc",
    "tsc:basic": "make tsc-basic",
    "tsc:watch": "make tsc-watch"
  },
  "dependencies": {
    "@apollo/react-common": "^3.1.3",
    "@apollo/react-components": "^3.1.3",
    "@apollo/react-hooks": "^3.1.3",
    "@apollo/react-ssr": "^3.1.3",
    "antd": "^3.26.2",
    "apollo": "^2.21.0",
    "apollo-cache": "^1.3.2",
    "apollo-client": "^2.6.4",
    "apollo-link": "^1.2.13",
    "apollo-utilities": "^1.3.2",
    "fbjs": "^1.0.0",
    "graphql": "^14.5.8",
    "graphql-anywhere": "^4.1.24",
    "graphql-tag": "^2.10.1",
    "next": "^9.1.2",
    "prop-types": "^15.6.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/plugin-proposal-decorators": "^7.7.0",
    "@babel/plugin-proposal-export-default-from": "^7.5.2",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.7.4",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "@babel/preset-typescript": "^7.7.2",
    "@babel/runtime": "^7.7.2",
    "@next/bundle-analyzer": "^9.1.4",
    "@storybook/addon-actions": "^5.2.8",
    "@storybook/addon-links": "^5.2.8",
    "@storybook/addon-viewport": "^5.2.8",
    "@storybook/react": "^5.2.8",
    "@types/clipboard": "^2.0.1",
    "@types/color": "^3.0.0",
    "@types/d3-hierarchy": "^1.1.6",
    "@types/draft-js": "^0.10.40",
    "@types/enzyme": "^3.10.4",
    "@types/jest": "^24.0.23",
    "@types/js-combinatorics": "^0.5.31",
    "@types/js-cookie": "^2.2.5",
    "@types/node-fetch": "^2.5.4",
    "@types/puppeteer": "^2.0.0",
    "@types/query-string": "^6.3.0",
    "@types/react": "^16.9.15",
    "@types/react-dom": "^16.9.4",
    "@types/uuid": "^3.4.6",
    "@types/validator": "^10.11.3",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "@zeit/next-less": "^1.0.1",
    "@zeit/next-source-maps": "0.0.3",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-css-modules-transform": "^1.6.1",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-transform-imports": "^2.0.0",
    "core-js": "^3.4.0",
    "dotenv": "^8.2.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.7.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-import-resolver-babel-module": "^5.0.0-beta.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-watch": "^6.0.1",
    "find-pkg-dir": "^2.0.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lerna": "^3.19.0",
    "lerna-changelog": "^0.8.3",
    "less": "^3.10.3",
    "lint-staged": "^9.5.0",
    "lodash.kebabcase": "^4.1.1",
    "moment": "^2.22.2",
    "moment-locales-webpack-plugin": "^1.1.0",
    "output-file-sync": "^2.0.1",
    "patch-package": "^6.2.0",
    "postcss-less": "^3.1.4",
    "postinstall-prepare": "^1.0.1",
    "prettier": "^1.19.1",
    "prettier-package-json": "^2.1.3",
    "react-helmet": "^6.0.0",
    "react-markdown": "^4.2.2",
    "typescript": "^3.7.3",
    "webpack": "^4.41.2"
  },
  "engines": {
    "node": ">=10.15.3",
    "npm": ">=5.3.0",
    "yarn": ">=1.13.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn tsc && lint-staged",
      "post-merge": "make babel-all",
      "post-checkout": "make babel-changed BRANCH=master"
    }
  },
  "resolutions": {
    "@types/query-string": "6.2.0",
    "@types/node": "13.11.1",
    "query-string": "5.1.1",
    "next": "9.1.2"
  }
}
