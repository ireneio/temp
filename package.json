{
  "private": true,
  "name": "@meepshop/front-end",
  "license": "ISC",
  "workspaces": [
    "packages/*",
    "meepshop/*",
    "meepshop/modules/*",
    "meepshop/form/*",
    "store/*",
    "store/pages/*",
    "admin/*",
    "admin/pages/*",
    "admin/refactor/*"
  ],
  "scripts": {
    "build": "NODE_ENV=production make babel-all && build-cache-config && types codegen all && meep-cli locales link ./meepshop/locales/locales && NEXT_PUBLIC_VERSION=$(yarn --silent build:version) lerna run prod --stream",
    "build:version": "if [ -z \"${CIRCLE_TAG}\" ]]; then echo $CIRCLE_BRANCH; else echo $CIRCLE_TAG; fi",
    "clean": "lerna run clean --stream && lerna exec 'rm -rf ./lib' --stream && lerna clean && make clean",
    "dev": "make babel-changed BABEL_OPTION=\"--delete-dir-on-start -w\"",
    "preinstall": "patch-package --reverse || echo \"no patch packages\"",
    "postinstall": "patch-package && echo FIXME && yarn babel ./node_modules/rifm/dist -d ./node_modules/rifm/dist --verbose && cp ./node_modules/cross-context-events/dist/index.js ./node_modules/cross-context-events/dist/cross-context-events.js",
    "link:env": "for type in local development production; do for filePath in ./admin/server ./packages/store; do ln -snf $(pwd)/.env.$type $filePath/src; done; done",
    "lint": "NODE_ENV=test esw --cache --color --ext js,ts,tsx",
    "lint:prettier": "yarn lint --quiet --rule \"prettier/prettier: off\"",
    "lint:watch": "yarn lint:prettier -w",
    "storybook:pre": "lerna run client:download-schema --stream",
    "test": "lerna run client:download-schema --stream && jest --silent --runInBand"
  },
  "dependencies": {
    "@ant-design/icons": "^4.6.2",
    "@apollo/client": "^3.5.8",
    "antd": "^4.15.0",
    "fbjs": "^1.0.0",
    "graphql": "^15.3.0",
    "graphql-anywhere": "^4.2.7",
    "next": "^11.1.2",
    "prop-types": "^15.6.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-use": "^17.3.1",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/plugin-proposal-decorators": "^7.7.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "@babel/preset-typescript": "^7.7.2",
    "@babel/runtime": "^7.7.2",
    "@meepshop/meep-cli": "^1.37.0",
    "@next/bundle-analyzer": "^9.1.4",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/apollo-upload-client": "^14.1.0",
    "@types/clipboard": "^2.0.1",
    "@types/color": "^3.0.0",
    "@types/cookie": "^0.4.0",
    "@types/d3-hierarchy": "^1.1.6",
    "@types/draft-js": "^0.10.40",
    "@types/enzyme": "^3.10.4",
    "@types/facebook-js-sdk": "^3.3.5",
    "@types/jest": "^24.0.23",
    "@types/js-combinatorics": "^0.5.31",
    "@types/js-cookie": "^2.2.5",
    "@types/less": "^3.0.1",
    "@types/lodash.camelcase": "^4.3.6",
    "@types/lodash.get": "^4.4.6",
    "@types/lodash.mergewith": "^4.6.6",
    "@types/node-fetch": "^2.5.4",
    "@types/nprogress": "^0.2.0",
    "@types/pino": "^6.3.5",
    "@types/puppeteer": "^2.0.0",
    "@types/qrcode.react": "^1.0.2",
    "@types/query-string": "^6.3.0",
    "@types/ramda": "^0.27.11",
    "@types/react-adaptive-hooks": "^0.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/ua-parser-js": "^0.7.20",
    "@types/uuid": "^3.4.6",
    "@types/validator": "^13.1.3",
    "@types/yeoman-generator": "^4.11.3",
    "@types/zen-observable": "^0.8.3",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "apollo": "^2.33.9",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-css-modules-transform": "^1.6.1",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-transform-imports": "^2.0.0",
    "core-js": "^3.4.0",
    "dotenv": "^8.2.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.7.2",
